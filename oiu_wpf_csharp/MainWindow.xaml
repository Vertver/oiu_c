<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:oiu_wpf_csharp"
         x:Class="oiu_wpf_csharp.MainWindow"        
        mc:Ignorable="d"
        Title="OIU Build 8" Height="540" Width="960">
    <Window.InputBindings>
        <KeyBinding Command="{Binding SaveCommand}" Modifiers="Control" Gesture="Control+S"/>
    </Window.InputBindings>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Menu Margin="0,0,0,17.88">
            <MenuItem Header="File">
                <MenuItem Header="New" InputGestureText="Ctrl + N"></MenuItem>
                <MenuItem Header="Open" InputGestureText="Ctrl + O" Click="MenuItem_Click_Open"></MenuItem>
                <MenuItem Header="Save" InputGestureText="Ctrl + S" Command="{Binding SaveCommand}"></MenuItem>
                <MenuItem Header="Save As..."  Click="MenuItem_Click_Save"></MenuItem>
                <Separator></Separator>
                <MenuItem Header="Exit" InputGestureText="Alt + F4" Click="MenuItem_Click_Exit"></MenuItem>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Options" InputGestureText="Ctrl + K"></MenuItem>
                <Separator></Separator>
                <MenuItem Header="VST" InputGestureText="Ctrl + Alt + /"></MenuItem>
                <Separator></Separator>
                <MenuItem Header="Copy" InputGestureText="Ctrl + C"></MenuItem>
                <MenuItem Header="Paste" InputGestureText="Ctrl + V"></MenuItem>
            </MenuItem>
            <MenuItem Header="About">
                <MenuItem Header="Help" InputGestureText="Ctrl + F1"></MenuItem>
                <Separator></Separator>
                <MenuItem Header="About"></MenuItem>
                <MenuItem Header="More"></MenuItem>
            </MenuItem>
        </Menu>
        <ListBox Grid.Column="0" 
                 ItemsSource="{Binding Modules}" 
                 SelectedItem="{Binding SelectedModule, Mode=TwoWay}" Margin="0,18,752,0" Grid.RowSpan="2" IsSynchronizedWithCurrentItem="False">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button Content="" HorizontalAlignment="Left" Margin="205,432,0,0" VerticalAlignment="Top" Width="20" Click="Button_Click" Grid.Row="1"/>
        <Button Content="" HorizontalAlignment="Left" Margin="230,432,0,0" Grid.Row="1" VerticalAlignment="Top" Width="20" Click="Button_Click_1"/>
        <Button Content="" HorizontalAlignment="Left" Margin="255,432,0,0" Grid.Row="1" VerticalAlignment="Top" Width="20" Click="Button_Click_2"/>


    </Grid>

</Window>
